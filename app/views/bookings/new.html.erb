<div class = "container m-5 align-self-stretch d-flex">

  <div class = "card p-3 my-auto mx-auto" style="width:250px">
    <div class="d-flex align-items-center justify-content-center">
      <div class="card-body">
        <%= simple_form_for [@book, @booking] do |form| %>
          <div class ="form p-2">
            <%= form.input :start_date,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
          </div>
          <div class ="form p-2">
            <%= form.input :end_date,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
            <div>
              <p>Total price: <%= number_to_currency(@show_total_price) %></p>
          </div>
          <div class ="form p-2 btn btn-flat">
          <%= form.submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
