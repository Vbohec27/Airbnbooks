<div class="container card-container">
  <div class="row">
    <% @books.each do |book| %>
      <div class="col m-5">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="https://static.wikia.nocookie.net/harrypotter/images/7/7b/Harry01english.jpg/revision/latest/scale-to-width-down/250?cb=20150208225304" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= book.title %></h5>
            <p class="card-text"><%= book.description %></p>
            <%= link_to "See more", book_path(book), class: "btn btn-primary card-btn" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
